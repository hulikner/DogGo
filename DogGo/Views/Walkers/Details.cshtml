@model DogGo.Models.ViewModels.WalkerProfileViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Walker</h4>
    <hr />
    <dl class="row">
        <dd class="col-sm-10">
            <img class="bg-info" src="@Model.Walker.ImageUrl" alt="avatar" width="100" height="100" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Walker.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Walker.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Walker.Neighborhood)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Walker.Neighborhood.Name)
        </dd>
    </dl>
    <dl class="row">
        <dd>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Walks.FirstOrDefault().Date)
                        </th>
                        <th>
                            Client
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Walks.FirstOrDefault().Duration)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Walk walk in Model.Walks)
                    {
                        <tr>
                            <td>
                                @{
                                    string DateString = walk.Date.ToString("MM/dd/yyyy");
                                }
                                @Html.DisplayFor(modelItem => DateString)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => walk.Id)
                            </td>
                            <td>
                                @{
                                    string DurString = walk.Duration / 60 + " min";
                                }
                                @Html.DisplayFor(modelItem => DurString)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
    <dl class="col-2">
        <dd>
        <dt>
            Total Walk Time: 
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TotalWalkTime)
        </dd>
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Walker.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
